<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/core@latest/dist/css/tabler.min.css">
        {% endblock %}
    </head>
    <body>
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/@tabler/core@latest/dist/js/tabler.min.js"></script>
        {% endblock %}

        <div class="page">
            <!-- Navbar -->
            <header class="navbar navbar-expand-lg d-print-none">
                <div class="container-xl">
                    <!-- BEGIN NAVBAR LOGO -->
                    <div class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal ps-0 ps-md-1">
                        <a href="{{ url('app_home') }}" aria-label="Logo">
                            Technical Test
                        </a>
                    </div>
                    <!-- END NAVBAR LOGO -->
                    <!-- Begin toggle button for mobile -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <!-- End toggle button for mobile -->
                    <div id="navbar-menu" class="collapse navbar-collapse">
                        <div class="navbar-nav flex-row order-md-last">
                            <div class="nav-item d-none d-md-flex ms-2">
                                <ul class="navbar-nav" aria-label="Menu list">
                                {% if is_granted('IS_AUTHENTICATED') %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ url('app_user_index') }}">
                                        <span class="nav-link-title"> Users </span>
                                        </a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-label="Open user dropdown">
                                            <div class="nav-link-title">
                                                <div>{{ app.user.email }}</div>
                                            </div>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                            <a href="{{ url('app_user_show', {id: app.user.id}) }}" class="dropdown-item">Profile</a>
                                            <a href="{{ url('app_logout') }}" class="dropdown-item">Logout</a>
                                        </div>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ url('app_login') }}">
                                        <span class="nav-link-title"> Login </span>
                                        </a>
                                    </li>
                                {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="container">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <footer class="page-wrapper text-muted">
            <div class="container">
                <p class="mb-1">©Nadia Siksnys, 2025</p>
                <p class="mb-0">Powered by Symfony 7.3 and Tabler 1.3.2</p>
            </div>
        </footer>
    </body>
</html>
